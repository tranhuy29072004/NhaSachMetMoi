@model NhaSachMetMoi.Models.KH

@{
    Page.Title = "Chỉnh Sửa Thông Tin Giao Hàng";
    Layout = "~/Views/Shared/Layoutpage.cshtml";
}
<header>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</header>
<body>
    <div class="content-wrapper">
        <div class="container11">
            <h1>@ViewBag.Title</h1>
            @using (Html.BeginForm("SuaXacNhanTT", "GioHang", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaKH)

                <div class="form-group">
                    @Html.LabelFor(model => model.HoTen)
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DiaChi)
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DienThoai)
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <button type="submit" class="btn">Lưu Thay Đổi</button>
            }
        </div>
    </div>
</body>

